<%- include('../../layout/head.ejs', {title: 'dashboard'}) -%>

<div class="min-h-full">

  <%- include("./nav.ejs") %>



  <main>
    <div class="bg-white">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:grid-cols-2 lg:px-8"
      >
        <div class="grid">
          <img contenteditable="true"
            src="<%= producto.imagenes[0].url %>"
            alt="Walnut card tray with white powder coated steel divider and 3 punchout holes."
            class="rounded-lg bg-gray-100"
          />
        </div>
        <div>
          <h2
            class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
            contenteditable="true"
            >
            <%= producto.nombre %>
          </h2>
          <p class="mt-4 text-gray-500" contenteditable="true"><%= producto.descripcion %></p>

          <dl
            class="mt-16 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 sm:gap-y-16 lg:gap-x-8"
          >
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900" contenteditable="true">Precio:</dt>
              <dd class="mt-2 text-sm text-gray-500">
                <%= producto.precio.toFixed(2) %>
              </dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900" contenteditable="true">Código del Producto</dt>
              <dd class="mt-2 text-sm text-gray-500" contenteditable="true"><%= producto.codigo %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Categoría</dt>
              <dd class="mt-2 text-sm text-gray-500" contenteditable="true">
             
                <%= producto.categoria.nombre %>
              </dd>
            </div>
          </dl>

          <div class="border-t border-gray-200 pt-4">
            <dd class="mt-2 text-sm text-gray-500">
              <button
                type="submit"
                class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              >
                actualizar
              </button>
            </dd>
          </div>
        </div>
      </div>
      <div></div>
    </div>
  </main>
</div>

<%- include('../../layout/bodyEnd.ejs') -%>
